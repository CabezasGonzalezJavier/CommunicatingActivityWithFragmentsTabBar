<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thedeveloperworldisyours.listenerfromactivitytoallfragments.fragment.SecondFragment">

    <ImageView
        android:id="@+id/fragment_second_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_margin_top_image"
        android:src="@drawable/the_developer_world_is_yours" />

    <TextView
        android:id="@+id/fragment_second_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fragment_margin_top_link"
        android:layout_below="@+id/fragment_second_image"
        android:text="@string/fragment_our_text" />

    <TextView
        android:id="@+id/fragment_second_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/fragment_margin_top_text"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fragment_size_text" />

</RelativeLayout>
